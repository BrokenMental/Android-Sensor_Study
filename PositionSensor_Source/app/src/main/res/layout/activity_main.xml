<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_Orientation">

        <TextView
            android:text="Orientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle_Orientation"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:background="?attr/colorControlHighlight"/>

        <TextView
            android:text="Azimuth: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAzimuth"/>

        <TextView
            android:text="Pitch: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPitch"/>

        <TextView
            android:text="Roll: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtRoll"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_MagneticField"
        android:layout_below="@+id/LinearLayout_Orientation"
        android:layout_marginTop="39dp">

        <TextView
            android:text="Magnetic Field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle_MagneticField"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:background="@android:color/holo_orange_light"/>

        <TextView
            android:text="X: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtX_MagneticField"/>

        <TextView
            android:text="Y: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtY_MagneticField"/>

        <TextView
            android:text="Z: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtZ_MagneticField"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_Proximity"
        android:layout_below="@+id/LinearLayout_MagneticField"
        android:layout_marginTop="46dp">

        <TextView
            android:text="Proximity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle_Proximity"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:background="@android:color/holo_orange_dark"/>

        <TextView
            android:text="X: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtProximity"/>

    </LinearLayout>
</RelativeLayout>